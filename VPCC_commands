    --frameCount=1 \
    --groupOfFramesSize=1 \
    --resolution=1023 \
    --colorTransform=0 \
    --videoEncoderOccupancyPath=bin/PccAppVideoEncoder \
    --videoEncoderGeometryPath=bin/PccAppVideoEncoder \
    --videoEncoderAttributePath=bin/PccAppVideoEncoder \
    --colorSpaceConversionPath=bin/PccAppColorConverter \
    --reconstructedDataPath=/mnt/d/NUS/Volumetric_Video_Streaming_UROP/test_data/reconstructed/test_rec_1051.ply \
    --compressedStreamPath=/mnt/d/NUS/Volumetric_Video_Streaming_UROP/test_data/compressed/test_vox10_ai.bin \
    --enablePointCloudPartitioning


// --levelOfDetailX=2 \    --levelOfDetailY=2
